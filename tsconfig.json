{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "types": ["jest", "node"], // Ensure "jest" is included here
    "skipLibCheck": true // Optional but can help avoid some type checking issues
  },
  "include": ["src/**/*", "index.ts", "routes", "server.ts", "__tests__/**/*"],
  "exclude": ["node_modules"]
}